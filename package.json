{
  "name": "notification",
  "version": "1.0.0",
  "description": "",
  "author": "Adel Ismael Mandanas",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@amndns/amqp-ts": "^1.0.12",
    "@amndns/service-utils": "^1.0.6",
    "@types/glob": "^7.1.3",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "concurrently": "^6.0.2",
    "dotenv": "^8.2.0",
    "glob": "^7.1.6",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.2.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.32",
    "typeorm-typedi-extensions": "^0.4.1"
  },
  "scripts": {
    "build-ts": "tsc",
    "build-ts:watch": "tsc -w",
    "serve": "node dist/app.js",
    "serve:watch": "nodemon dist/server.js",
    "start": "yarn build-ts && yarn serve",
    "start:watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn build-ts:watch\" \"yarn serve:watch\"",
    "debug:watch": "nodemon --inspect dist/app.js",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit --passWithNoTests",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/test/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/unit/lib/setup.ts"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/concurrently": "^6.0.1",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
